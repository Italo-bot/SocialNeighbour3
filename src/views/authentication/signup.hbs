<div class="row">
  <div class="col-md-4 offset-md-4">

    {{#if error}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      {{error}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    {{/if}}

    <div class="card bg-dark text-light">
      <div class="card-body">
        <h3 class="text-light h1">Registrarse</h3>
        <form action="/auth/signup" method="POST">
          <div class="form-group">
            <input type="text" name="email" class="form-control bg-dark text-light border border-success"
              placeholder="correo@correo.com" autofocus>
          </div>
          <div class="form-group">
            <input type="password" name="password" class="form-control bg-dark text-light border border-success"
              placeholder="Contraseña">
          </div>
          <div class="form-group">
            <input type="password" name="confirm-password" class="form-control bg-dark text-light border border-success"
              placeholder="Confirmar contraseña">
          </div>
          <button class="btn btn-success btn-block">
            Registrarse
          </button>
        </form>
      </div>
    </div>

  </div>
</div>